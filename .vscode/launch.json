  "version": "0.2.0",
  "configurations": [
    {
      "name": "Index TS File",
      "type": "node",
      "request": "launch",
      "args": ["index.ts"],
      "runtimeArgs": ["--nolazy", "-r", "ts-node/register"],
      "sourceMaps": true,
      "cwd": "${workspaceRoot}/api/v1/",
      "protocol": "inspector",
      "env": {
        "DEVELOPMENT": "true"
      }
    },
    {
      "name": "I18n TS File",
      "type": "node",
      "request": "launch",
      "args": ["scripts/i18n_extract.ts"],
      "runtimeArgs": ["--nolazy", "-r", "ts-node/register"],
      "sourceMaps": true,
      "cwd": "${workspaceRoot}/api/v1/",
      "protocol": "inspector"
    },
    {
      "name": "Update Schemas TS File",
      "type": "node",
      "request": "launch",
      "args": ["scripts/updateFilesFromSchema.ts"],
      "runtimeArgs": ["--nolazy", "-r", "ts-node/register"],
      "sourceMaps": true,
      "cwd": "${workspaceRoot}",
      "protocol": "inspector"
    },
    {
      "name": "Generate Types TS File",
      "type": "node",
      "request": "launch",
      "args": ["scripts/generateTypes.ts"],
      "runtimeArgs": ["--nolazy", "-r", "ts-node/register"],
      "sourceMaps": true,
      "cwd": "${workspaceRoot}",
      "protocol": "inspector"
    }
  ]
}
