{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es6", "dom", "esnext"],
    "sourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./dist",
    "sourceRoot": "src",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  },
  "exclude": ["dist", "examples", "node_modules", ".vscode", ".vs", ".git"]
}
